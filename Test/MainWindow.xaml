<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ListViewGridViewSample" Height="200" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Button Click="Button_Click">Thay đổi</Button>
        <ListView Margin="10" Name="lvUsers" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tên" Width="120" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Nội dung" DisplayMemberBinding="{Binding Captions}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
